{
  "name": "Todo-um!",
  "description": "The most simple todo list you need",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/js/background.js"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "src/html/popup.html",
    "default_icon": {
      "16": "src/images/checkbox-16.png",
      "32": "src/images/checkbox-32.png",
      "48": "src/images/checkbox-48.png",
      "128": "src/images/checkbox-128.png"
    }
  },
  "icons": {
    "16": "src/images/checkbox-16.png",
    "32": "src/images/checkbox-32.png",
    "48": "src/images/checkbox-48.png",
    "128": "src/images/checkbox-128.png"
  },
  "options_page": "src/html/options.html"
}
